def caesar_encrypt(text):
    shift = 3
    result = ""
    for char in text:
        if char.isalpha():
            start = ord('A') if char.isupper() else ord('a')
            result += chr((ord(char) - start + shift) % 26 + start)
        else:
            result += char
    return result

text = input("Enter text to encrypt: ")
print("Encrypted text:", caesar_encrypt(text))
